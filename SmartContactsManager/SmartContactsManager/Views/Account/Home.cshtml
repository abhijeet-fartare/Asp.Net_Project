@{
    ViewBag.Title = "Home";
}

<div class="poster d-flex justify-content-center align-items-center ">
	<div class="font-weight-bold text-center">
		<h1>Smart Contact Manager</h1>
		<p>
			Start Collecting your contacts in very smarter way. We
			provide very efficient and smarter way of handling contacts
		</p>
		@if (User.Identity.IsAuthenticated)
		{
			<a asp-action="Index" asp-controller="Contact" class="btn bg-primary btn-lg text-white">Get Started</a>
		}
		else
		{
			<a asp-action="Login" asp-controller="Account" class="btn bg-primary btn-lg text-white">Get Started</a>
		}
	</div>
</div>