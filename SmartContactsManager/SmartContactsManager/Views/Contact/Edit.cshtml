@model ContactUpdateRequest
@{
 ViewBag.Title = "Update Contact";
}

<div class="card mr-5 ml-5">
	<div class="card-body">
		<h1 class="text-center">Edit contact</h1>
		<div class="container-fluid mt-1">
			<div class="row">
				<div class="col-md-7 offset-md-2">
					<form asp-controller="Contact" asp-action="Edit" method="post" class="mt-2">

						<input type="hidden" asp-for="ContactId" />

						<!-- name -->
						<div class="form-group">
							<div class="input-group-prepend">
								<div class="input-group-text">
									<i class="fa fa-user-alt"></i>
								</div>
								<input asp-for="Name" class="form-control" />
							</div>
							<span asp-validation-for="Name" class="text-red"></span>
						</div>


						<!-- phone field -->
						<div class="form-group">
							<div class="input-group-prepend">
								<div class="input-group-text">
									<i class="fa fa-phone"></i>
								</div>
								<input asp-for="Phone" class="form-control " />
							</div>
							<span asp-validation-for="Phone" class="text-red"></span>
						</div>

						<!-- Email field -->
						<div class="form-group">
							<div class="input-group-prepend">
								<div class="input-group-text">
									<i class="fa fa-envelope"></i>
								</div>
								<input asp-for="Email" class="form-control" />
							</div>
							<span asp-validation-for="Email" class="text-red"></span>
						</div>

						<!-- Description field -->
						<div class="form-group">
							<div class="input-group-prepend">
								<div class="input-group-text">
									<i class="fa fa-briefcase"></i>
								</div>
								<input asp-for="Description" class="form-control" />
							</div>
						</div>

						<!-- Gender field -->
						<div class="form-group">
							<div class="input-group-prepend">
								<div class="input-group-text">
									<i class="fa fa-venus-mars"></i>
								</div>
								<select asp-for="Gender" class="Space">
									<option disabled selected>Select Gender </option>
									<option value="Male">Male</option>
									<option value="Female">Female</option>
								</select>

							</div>
						</div>

						<!-- submit  -->
						<div class="container text-center">
							<button type="submit" value="sumbit" name="submit"
									id="submitbtn" class="btn btn-outline-primary">
								Submit Button
							</button>
							<a asp-action="Index" asp-controller="Contact" class="btn btn-warning  text-white Space">Cancle</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>